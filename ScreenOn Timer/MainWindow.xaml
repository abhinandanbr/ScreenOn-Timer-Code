<Window x:Class="ScreenOn_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="mainTimerWindowUI"
        Title="ScreenOn Timer" Height="50" Width="200" LostKeyboardFocus="Window_PreviewLostKeyboardFocus"
        ResizeMode="CanResizeWithGrip" WindowStyle="None" AllowsTransparency="True"
        Opacity="0.8" 
        WindowStartupLocation="Manual" ShowInTaskbar="False" Background="DarkSlateGray">

    <Grid ClipToBounds="True">
        <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="timerTxtDisplayUI" Text="Screen On" VerticalAlignment="Center" 
                   FontFamily="Adobe Caslon Pro" FontSize="16" Foreground="WhiteSmoke" />
    </Grid>
</Window>
